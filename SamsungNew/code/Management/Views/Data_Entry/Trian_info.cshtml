@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link href="~/lib/css/home/home.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/css/validation/screen.css" rel="stylesheet" type="text/css" />
    <link type="text/css" rel="stylesheet" href="~/lib/css/core/ligerui-common.css">
    <link type="text/css" rel="stylesheet" href="~/lib/css/core/ligerui-dialog.css">
    <link type="text/css" rel="stylesheet" href="~/lib/css/core/ligerui-form.css">
    <link rel="stylesheet" type="text/css" href="~/lib/css/datepicker/jquery-ui.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/css/datepicker/jquery-ui-timepicker-addon.min.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/css/datepicker/datetimepicker.css" />
    <script src="~/lib/js/core/jquery-1.7.2.min.js" type="text/javascript"></script>
    <script src="~/lib/js/core/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/lib/js/core/messages_zh.js" type="text/javascript"></script>
    <script src="~/lib/js/core/ligerui.min.js" type="text/javascript"></script>
    <script src="~/lib/js/datepicker/jquery-ui-1.9.2-min.js"></script>
    <script src="~/lib/js/datepicker/jquery.ui.datepicker-zh-CN.min.js"></script>
    <script src="~/lib/js/datepicker/jquery-ui-sliderAccess.js"></script>
    <script src="~/lib/js/datepicker/jquery-ui-timepicker-addon.min.js"></script>
    <title>培训信息</title>
</head>
<body>

    <div id="info-wrap1">
        <div class="navbar">
            <div class="navbar-l"></div>
            <div class="navbar-r"></div>
            <div class="navbar-icon">
                <img alt="" src="~/lib/css/icons/tag.gif">
            </div>
            <div class="navbar-inner">
                <b>培训信息 [带*为必填]</b>
            </div>
        </div>
        <div class="info-form">
            <form action="../Data_Entry/Trian_info" name="traininfo-form" id="traininfo-form" method="post">
                <table cellspacing="0" cellspadding="0">
                    <tr>
                        <th>上级<span style="color: red">*</span></th>
                        <td>
                            <select name="trainInfo.captain" id="captain1"></select>
                        </td>
                        <th>唯一号<span style="color: red">*</span></th>
                        <td>
                            <input type="text" id="chooseunique" style="width: 50px" />&nbsp;筛选唯一号(可不填)
                            <select name="trainInfo.uniquenum" id="uniquenum1"></select></td>
                    </tr>
                    <tr>
                        <th>姓名<span style="color: red">*</span></th>
                        <td>
                            <input type="text" id="choosename" style="width: 50px" />&nbsp;筛选姓名(可不填)
                            <input name="staffInfo.name" id="name1" type="text" value="" class="txt" disabled="disabled" />
                            <input name="staffInfo.name" id="names1" type="hidden" value="" />
                            <span>
                                <input id="Part_time_Worker" class="l-button3333" type="button" value="添加人员" /></span>
                        </td>
                        <th>身份证号码<span style="color: red">*</span></th>
                        <td>
                            <input name="staffInfo.identity" id="identity1" type="text" value="" class="txt" disabled="disabled" />
                        </td>
                    </tr>
                    <tr>
                        <th>办事处<span style="color: red">*</span></th>
                        <td>
                            <input name="staffInfo.office" id="office1" type="text" value="" class="txt" disabled="disabled" />
                        </td>
                        <th>城市<span style="color: red">*</span></th>
                        <td>
                            <input name="staffInfo.city" id="city1" type="text" value="" class="txt" disabled="disabled" />
                        </td>
                    </tr>
                    <tr>
                        <th>培训产品<span style="color: red">*</span></th>
                        <td>
                            <select name="trainInfo.type" id="type1"></select>
                            <select name="trainInfo.product" id="product1"></select>
                        </td>
                        <th>培训分数<span style="color: red">*</span></th>
                        <td>
                            <input data-val="true" id="grade" name="trainInfo.grade" type="text" value="" class="txt">
                            @Html.ValidationMessage("trainInfo.grade", new { style = "font-style:italic;color:red;" })
                        </td>

                    </tr>
                    <tr>
                        <th>培训开始时间<span style="color: red">*</span></th>
                        <td>
                            <input data-val="true" id="date2" name="trainInfo.date" type="text">
                            @Html.ValidationMessage("trainInfo.date", new { style = "font-style:italic;color:red;" })
                        </td>
                        <th>培训结束时间<span style="color: red">*</span></th>
                        <td>
                            <input data-val="true" id="date1" name="trainInfo.date1" type="text">
                            @Html.ValidationMessage("trainInfo.date1", new { style = "font-style:italic;color:red;" })
                        </td>

                    </tr>
                    <tr>
                        <th>培训讲师<span style="color: red">*</span></th>
                        <td>
                            <input data-val="true" id="trainer" name="trainInfo.trainer" type="text" class="txt">
                            @Html.ValidationMessage("trainInfo.trainer", new { style = "font-style:italic;color:red;" })
                        </td>
                    </tr>
                    <tr>
                        <th>&nbsp;</th>
                        <td>
                            <input id="remark" type="hidden" value="" />
                            <input id="type2" type="hidden" name="type" value="insert" />
                            <input id="id" name="id" type="hidden" value="" />
                            <input id="newsId" name="newsId" type="hidden" value="@ViewBag.newId"/>
                            <input id="submit1" class="l-button3" type="submit" value="提交" />
                            <input id="reset1" class="l-button3" type="reset" value="重置" />
                            <input id="caogao1" class="l-button3" type="button" value="草稿箱">
                            <input id="flag1" type="hidden" value="@ViewBag.cof1" />
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </div>

    <script type="text/javascript">
        function f_show(url) {
            window.parent.$.ligerDialog.open(
            {
                width: 1200,
                height: 600,
                isResize: true,
                name: "show",
                url: url,
                title: '添加信息',
                buttons: [
                    {
                        text: '关闭',
                        onclick: function (item, dialog) {
                            window.location.reload();
                            dialog.close();
                        }
                    }
                ]
            });
        }
        $(document).ready(function () {
            $("#Part_time_Worker").click(function () {
                f_show("../Data_Entry/Part_time_Worker");
            });
            $("#caogao1").click(function () {
                $.ajax({
                    url: "../Data_Entry/Caogao1",
                    type: "post",
                    data: {
                        "grade": $("#grade").val(),
                        "date2": $("#date2").val(),
                        "date1": $("#date1").val(),
                        "uniquenum1": $("#uniquenum1").val(),
                        "trainer": $("#trainer").val(),
                        "id": $("#id").val(),
                    },
                    dataType: "json",
                    success: function (data) {
                        var dialog = $.ligerDialog.tip({ title: "提示", content: "成功保存草稿!" });
                        setTimeout(function () {
                            dialog.close();
                        }, 5000);
                    }
                });
            });
            if ($("#flag1").val() == "1") {
                var dialog = $.ligerDialog.tip({ title: "提示", content: "成功录入培训信息!" });
                setTimeout(function () {
                    dialog.close();
                }, 5000);
            }


            $.ajax({
                url: "../Data_Entry/selectProduct",
                type: "post",
                dataType: "json",
                success: function (data) {
                    $("#product1").html(data.productHtml);
                    $("#type1").html(data.typeHtml);
                    if ($("#type1").val() == null) {
                        $.ligerDialog.warn('没有培训产品,请先添加培训产品！');
                        $(":input").attr("disabled", "disabled");
                    }
                }
            });


            $("#type1").bind("change", function () {
                $.ajax({
                    url: "../Data_Entry/selectType",
                    type: "post",
                    data: { "trainInfo.type": $(this).val() },
                    dataType: "json",
                    success: function (data) {
                        $("#product1").html(data.typeHtml);
                    }
                });
            });

            $("#chooseunique").change(function () {
                $.ajax({
                    url: "../Data_Entry/getunique",
                    type: "post",
                    data: {
                        "chooseunique": $("#chooseunique").val(),
                        "uniquen": $("#uniquenum1").val()
                    },
                    dataType: "json",
                    success: function (data) {
                        $("#uniquenum1").html(data.chooseuniqueValue);
                        $("#name1").val(data.name);
                        $("#names1").val(data.name);
                        $("#identity1").val(data.identity);
                        $("#office1").val(data.office);
                        $("#city1").val(data.city);
                        $("#remark").val(data.remark);
                    }
                });
            });

            $("#choosename").change(function () {
                $.ajax({
                    url: "../Data_Entry/getname",
                    type: "post",
                    data: {
                        "choosename": $("#choosename").val(),
                        "uniquen": $("#uniquenum1").val()
                    },
                    dataType: "json",
                    success: function (data) {
                        $("#uniquenum1").html(data.chooseuniqueValue);
                        $("#name1").val(data.name);
                        $("#names1").val(data.name);
                        $("#identity1").val(data.identity);
                        $("#office1").val(data.office);
                        $("#city1").val(data.city);
                        $("#remark").val(data.remark);
                    }
                });
            });

            $("#uniquenum1").bind("change", function () {
                $.ajax({
                    url: "../Data_Entry/fillTrainFormValue",
                    type: "post",
                    data: { "trainInfo.uniquenum": $(this).val() },
                    dataType: "json",
                    success: function (data) {
                        $("#name1").val(data.name);
                        $("#names1").val(data.name);
                        $("#identity1").val(data.identity);
                        $("#office1").val(data.office);
                        $("#city1").val(data.city);
                        $("#remark").val(data.remark);

                    }
                });
            });
            $("#captain1").bind("change", function () {
                $.ajax({
                    url: "../Data_Entry/fillTrainUniquenumValue",
                    type: "post",
                    data: { "trainInfo.captain": $(this).val() },
                    dataType: "json",
                    success: function (data) {
                        $("#uniquenum1").html(data.uniquenumValue);
                        $("#name1").val(data.name);
                        $("#names1").val(data.name);
                        $("#identity1").val(data.identity);
                        $("#office1").val(data.office);
                        $("#city1").val(data.city);
                        $("#remark").val(data.remark);
                    }
                });
            });


            timeFormatObj = {

                showSecond: false,
                changeMonth: true,
                timeFormat: 'HH:mm:ss',
                dateFormat: 'yy-mm-dd',
                stepHour: 1,
                stepMinute: 1,

            };


            $("#date2").datetimepicker(timeFormatObj);
            $("#date1").datetimepicker(timeFormatObj);
            $("#traininfo-form").validate({
                onkeyup: false,
                focusInvalid: true,
                rules: {
                    "trainInfo.uniquenum": {
                        required: true
                    },
                    "trainInfo.product": {
                        required: true
                    },
                    "trainInfo.date": {
                        required: true,
                        remote: {
                            url: "../Data_Entry/validateBeginTime",
                            type: "post",
                            data: {
                                endTime: function () {
                                    return $("#date1").val();
                                }
                            },
                            dataType: "json"
                        }

                    },
                    "trainInfo.date1": {
                        required: true,
                        remote: {
                            url: "../Data_Entry/validateEndTime",
                            type: "post",
                            data: {
                                beginTime: function () {
                                    return $("#date2").val();
                                }
                            },
                            dataType: "json"
                        }
                    },
                    "trainInfo.grade": {
                        required: true,
                        range: [0, 100],
                        digits: true
                    },
                    "trainInfo.trainer": {
                        required: true
                    },
                    "trainInfo.type": {
                        required: true
                    }
                },
                messages: {
                    "trainInfo.product": {
                        required: "请输入培训产品"
                    },
                    "trainInfo.date": {
                        required: "请输入培训开始时间",
                        remote: $.format("结束时间不能早于开始时间"),
                    },
                    "trainInfo.date1": {
                        required: "请输入培训结束时间",
                        remote: $.format("结束时间不能早于开始时间"),
                    },
                    "trainInfo.grade": {
                        required: "请输入培训分数",
                        range: "培训分数为[0, 100]",
                        digits: "请输入整数"
                    },
                    "trainInfo.trainer": {
                        required: "请输入培训人员"
                    },
                    "trainInfo.uniquenum": {
                        required: "请输入唯一号"
                    },
                    "trainInfo.type": {
                        required: "请输入型号"
                    },
                },
                submitHandler: function (form) {
                    var remark = $("#remark").val();
                    if (remark == "资料不全") {
                        var warning = "资料不全，不能培训";
                        $.ligerDialog.warn(warning);
                        return false;
                    }
                    else {
                        form.submit();
                        $(".l-dialog,.l-window-mask").remove();
                    }
                }
            });

            $.ajax({
                url: "../Data_Entry/Getcao1",
                type: "post",
                dataType: "json",
                data: { "trainInfo.uniquenum": $("#uniquenum1").val() },
                success: function (data) {
                    $("#grade").val(data.grade);
                    $("#date2").val(data.date2);
                    $("#date1").val(data.date1);
                    $("#trainer").val(data.trainer);
                    $("#id").val(data.id);
                }
            });

            $.ajax({
                url: "../Data_Entry/unionUniquenumHtmlValue",
                type: "post",
                dataType: "json",
                success: function (data) {
                    if (data.staffInfo != null) {
                        $("#name1").val(data.name);
                        $("#names1").val(data.name);
                        $("#identity1").val(data.identity);
                        $("#city1").val(data.city);
                    }
                    $("#uniquenum1").html(data.uniquenumValue);
                    $("#captain1").html(data.captainValue);
                    $("#office1").val(data.office);
                    $("#remark").val(data.remark);
                }
            });
        });
    </script>
</body>
</html>
