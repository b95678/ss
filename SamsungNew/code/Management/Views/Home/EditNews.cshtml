@{
    Layout = null;
}

@model Management.Models.Notice

<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <link href="/lib/css/home/home.css" rel="stylesheet" type="text/css" />
        <link href="/lib/css/validation/screen.css" rel="stylesheet" type="text/css" />
        <link type="text/css" rel="stylesheet" href="/lib/css/core/ligerui-common.css">
        <link type="text/css" rel="stylesheet" href="/lib/css/core/ligerui-dialog.css">
        <link type="text/css" rel="stylesheet" href="/lib/css/core/ligerui-form.css">
        <script src="/lib/js/core/jquery-1.7.2.min.js" type="text/javascript"></script>  
        <script src="/lib/js/core/jquery.validate.min.js" type="text/javascript"></script>
        <script src="/lib/js/core/messages_zh.js" type="text/javascript"></script>
        <script src="/lib/js/core/ligerui.min.js" type="text/javascript"></script>
        <title>编辑公告</title>
    </head>
    <body>
        <div id="info-wrap">
            <div class="navbar">
                <div class="navbar-l"></div>
                <div class="navbar-r"></div>
                <div class="navbar-icon">
                    <img alt=""  src="/lib/css/icons/tag.gif">
                </div>
                <div class="navbar-inner">
                    <b>编辑公告</b>
                </div>
            </div>
            <div style="background-color:#F2F2F2;border:1px #E4E4E4 solid;">
                <form action="/Home/ModifyNews" name="news-form" id="news-form" method="post">
                    <table cellspacing="0" cellspadding="0" style="width: 80%">
                        <tr>
                            <td style="width: 50px">标题*</td>
                            <td style="width: 500px">
                                <input name="newsInfo.title" id="title" type="text" value="@ViewBag.title" class="txt" style="width:300px"/>        @Html.ValidationMessage("newsInfo.title")
                            </td>
                        </tr>
                        <tr>
                            <td>内容*</td>
                            <td>
                                <textarea rows="6" cols="45" name="newsInfo.contents" id="content">@ViewBag.content</textarea>
                                @Html.ValidationMessage("newsInfo.contents")
                            </td>
                        </tr>                     
                        <tr>
                            <td>&nbsp;</td>
                            <td>
                                <input type="hidden" value="3" name="id"/>
                                <input class="l-button3" type="button" value="返回" onclick="window.location.href = '/sys/index'"/>
                                <input id="submit" class="l-button3" type="submit" value="提交"/>
                            </td>
                        </tr>
                    </table>
                </form>
            </div>
        </div>
        <script type="text/javascript">
            $(document).ready(function () {
                $("#news-form").validate({
                    onkeyup: false,
                    focusInvalid: true,
                    rules: {
                        "newsInfo.title": {
                            required: true
                        },
                        "newsInfo.contents": {
                            required: true
                        }
                    },
                    messages: {
                        "newsInfo.title": {
                            required: "请输入标题"
                        },
                        "newsInfo.contents": {
                            required: "请输入内容"
                        }
                    }
                });
            });

        </script>
    </body>
</html>

