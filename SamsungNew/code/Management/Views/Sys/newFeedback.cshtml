@{
    Layout = null;
}

<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <link href="~/lib/css/home/home.css" rel="stylesheet" type="text/css" />
        <link href="~/lib/css/validation/screen.css" rel="stylesheet" type="text/css" />
        <link type="text/css" rel="stylesheet" href="~/lib/css/core/ligerui-common.css">
        <link type="text/css" rel="stylesheet" href="~/lib/css/core/ligerui-dialog.css">
        <link type="text/css" rel="stylesheet" href="~/lib/css/core/ligerui-form.css">
        <script src="~/lib/js/core/jquery-1.7.2.min.js" type="text/javascript"></script>  
        <script src="~/lib/js/core/jquery.validate.min.js" type="text/javascript"></script>
        <script src="~/lib/js/core/messages_zh.js" type="text/javascript"></script>
        <script src="~/lib/js/core/ligerui.min.js" type="text/javascript"></script>
        <title>问题反馈</title>
    </head>
    <body>
        <div id="info-wrap">
            <div class="navbar">
                <div class="navbar-l"></div>
                <div class="navbar-r"></div>
                <div class="navbar-icon">
                    <img alt=""  src="~/lib/css/icons/tag.gif">
                </div>
                <div class="navbar-inner">
                    <b>问题反馈</b>
                </div>
            </div>
            <div id="newFeedback">
                <input id="back" class="l-button3" type="button" value="返回" onclick="window.location.href = '/sys/feedback'"/>
            </div>
            <div style="background-color:#F2F2F2;border:1px #E4E4E4 solid;">
                <form action="/sys/addFeedback" name="feedback-form" id="feedback-form" method="post">
                    <table cellspacing="0" cellspadding="0" style="width: 80%">
                        <tr>
                            <td style="width: 50px">标题*</td>
                            <td style="width: 500px">
                                <input name="feedbackInfo.title" id="title" type="text" value="@ViewBag.Title" class="txt" style="width:300px"/>
                                @Html.ValidationMessage("feedbackInfo.title",new {sytle="font-style:italic;color:red;" })
                            </td>
                        </tr>
                        <tr>
                            <td>内容*</td>
                            <td>
                                <textarea rows="6" cols="60" name="feedbackInfo.contents" id="content">@ViewBag.content</textarea>
                                @Html.ValidationMessage("feedbackInfo.contents", new {sytle="font-style:italic;color:red;" })
                            </td>
                        </tr>                     
                        <tr>
                            <td>&nbsp;</td>
                            <td>
                                <input id="submit" class="l-button3" type="submit" value="提交"/>
                            </td>
                        </tr>
                    </table>
                </form>
            </div>
        </div>
        <script type="text/javascript">
            $(document).ready(function () {
                $("#feedback-form").validate({
                    onkeyup: false,
                    focusInvalid: true,
                    rules: {
                        "feedbackInfo.title": {
                            required: true
                        },
                        "feedbackInfo.contents": {
                            required: true
                        }
                    },
                    messages: {
                        "feedbackInfo.title": {
                            required: "请输入标题"
                        },
                        "feedbackInfo.contents": {
                            required: "请输入内容"
                        }
                    }
                });
            });

        </script>           

</body>
</html>
