@{
    Layout = null;
}

@{
    List<Management.Models.AttendingInfo> mm = (List<Management.Models.AttendingInfo>)ViewBag.humInfo;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/css/home/home.css" rel="stylesheet" type="text/css" />
    <style>
        .DataGrid
        {
            background-color: #ffffff;
            border: 1px solid #D3E7E6;
        }

        .DataGrid td
       {
            padding: 3px;
            height: 24px;
            border-bottom: 1px solid #e9e9e9;
            background-color: #fff;
            display: block;
            zoom: expression(this.innerHTML==""?(this.innerHTML="&nbsp;"):0);
       }

       .DataGrid_Item
       {
            background-color: #FBFFFF;
            padding: 4px;
       }
    </style>
    <script src="~/lib/js/core/jquery-1.7.2.min.js" type="text/javascript"></script>
    <title>人员信息</title>
</head>
<body>
    <div id="showbase" >
        <table >
            <tr>
                <th style="width: 15%;">唯一号</th>
                <th style="width: 10%;">姓名</th>
                <th style="width: 20%;">工作门店</th>
                <th style="width: 15%;">日薪标准</th>
                <th style="width: 10%;">补助</th>
                <th style="width: 30%;">工作日期</th>
            </tr>
            @if (mm != null)
            {
                foreach (var item in mm)
                {
                <tr align="center">
                    <td style="width: 15%">@item.HumanBasicFile.uniNum</td>
                    <td style="width: 10%">@item.HumanBasicFile.Name</td>
                    <td style="width: 20%">@item.Department</td>
                    <td style="width: 15%">@item.StandardSalary</td>
                    <td style="width: 10%">@item.BearFees</td>
                    <td style="width: 30%">@item.Date</td>
                </tr> 
                }
            }
        </table>
    </div>
</body>
</html>
